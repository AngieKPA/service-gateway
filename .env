# service-gateway/.env
NODE_ENV=development
PORT=3000

# URLs de servicios
INVENTORY_SERVICE_URL=http://localhost:8000

# Bases de datos
REDIS_URL=redis://localhost:6379
MONGO_URI=mongodb://localhost:27017
MONGO_DB=gateway_logs

# Seguridad
JWT_SECRET=industrial-security-secret-2024-change-in-production
JWT_EXPIRES_IN=1h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100
STOCK_LIMIT_WINDOW_MS=60000   # 1 minuto
STOCK_LIMIT_MAX_REQUESTS=50

# AWS (si est√°s en EC2, esto se auto-configura)
AWS_REGION=us-east-1